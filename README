Examples:

// Authentication
$trove = new Trove($client_id, $client_secret, $callback_url)
$authUrl = $trove->buildAuthUrl();
echo ($authUrl);

// Redirect users to the authUrl.  The bounceback will return a code, that you then have to turn into an accesstoken
$trove = new Trove($client_id, $client_secret, $callback_url)
$trove_access_token = getAccessToken($code) // $code is from the bounceback url
// Save $trove_access_token and to reuse the token later:
$trove = new Trove($client_id, $client_secret, $callback_url, $trove_access_token)

// Some sample method calls

print_r($trove->getUserInformation());
print_r($trove->getPhotos());
print_r($trove->getCheckins());
print_r($trove->getStatus());
print_r($trove->getPhotos(array('services'=>'facebook', 'page'=>'2')));
